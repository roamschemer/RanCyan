        <behaviorsPack:SelectedItemBehavior Command="{Binding ListTapped}"/>
      </ListView.Behaviors>
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal" >
              <ff:CachedImage Aspect = "AspectFit" Source="{Binding Image}" />
              <Label Text="{Binding Title}" VerticalOptions = "Center"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>-->

  <CollectionView ItemsSource="{Binding ListView}">
    <CollectionView.ItemTemplate>
      <DataTemplate>
        <Grid Padding="10">
          <Grid.GestureRecognizers>
            <TapGestureRecognizer 
                Command="{Binding BindingContext.ListTapped, Source={x:Reference Base}}" 
                CommandParameter="{Binding}"/>
          </Grid.GestureRecognizers>
          <StackLayout Orientation="Horizontal" >
            <ff:CachedImage Aspect = "AspectFit" Source="{Binding Image}" />
            <Label Text="{Binding Title}" />
          </StackLayout>
        </Grid>
      </DataTemplate>
    </CollectionView.ItemTemplate>
  </CollectionView>


</ContentPage>